@using lib_dominio.Entidades
@using lib_dominio.Nucleo
@{
    //Verifica del context de la session si alguien esta log(se genera cuando alguien entra en el formulario de login)
    var estaLogueado = Context.Session.GetString("Usuario") != null;
    //Obtiene los permisos que se guardaron en HttpContext.Session.SetString en login en formato json
    var permisos = Context.Session.GetString("Permisos");
    //Convierte el json a lista Permisos
    List<Permisos>? Listpermisos = null;
    if (!string.IsNullOrEmpty(permisos))
    {
        Listpermisos = JsonConversor.ConvertirAObjeto<List<Permisos>>(permisos);
    }
}
<!DOCTYPE html>     
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet"
          href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="~/css/site.css"
          asp-append-version="true" />
    <link rel="stylesheet"
          href="~/asp_presentacion.styles.css"
          asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light
bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand"
                   asp-area=""
                   asp-page="/Index">
                    asp_presentacion
                </a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                    </span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justifycontent-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-area=""
                               asp-page="/Ventanas/Login">
                                Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-area=""
                               asp-page="/Ventanas/Pedidos">
                                Pedidos
                            </a>
                        </li>
                        @if (estaLogueado && Listpermisos?.FirstOrDefault(x => x.Nombre == "Listar") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                asp-area=""
                                asp-page="/Ventanas/Bodegas">
                                    Bodegas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                asp-area=""
                                asp-page="/Ventanas/Roles">
                                    Roles
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                asp-area=""
                                asp-page="/Ventanas/Usuarios">
                                    Usuarios
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                asp-area=""
                                asp-page="/Ventanas/Auditorias">
                                    Auditorias
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                asp-area=""
                                asp-page="/Ventanas/Documentos">
                                    Documentos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                asp-area=""
                                asp-page="/Ventanas/Empresas">
                                    Empresas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                asp-area=""
                                asp-page="/Ventanas/Permisos">
                                    Permisos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                asp-area=""
                                asp-page="/Ventanas/Productos">
                                    Productos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                asp-area=""
                                asp-page="/Ventanas/Vehiculos">
                                    Vehiculos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                asp-area=""
                                asp-page="/Ventanas/Vehiculos_Documentos">
                                    Intermedio Vehiculos y Documentos
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main"
              class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - asp_presentacion -
            <a asp-area="" asp-page="/Privacy"> 
                Privacy
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js">
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js">
    </script>
    <script src="~/js/site.js"
            asp-append-version="true">
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>